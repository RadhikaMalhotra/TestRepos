pipeline {
  agent {
    label 'ciread'
  }
  
  options {
    timeout(time: 15, unit: 'MINUTES')
    ansiColor('xterm')
  }
  
  stages {
    stage('Get pull request for Validation') {
      steps {
            scm {
                git {
                    remote {
                        url('https://github.com/RadhikaMalhotra/TestRepos.git')
                        github('RadhikaMalhotra/TestRepos')
                        refspec('+refs/heads/*:refs/remotes/origin/pr/*')
                    }
                    branch('*/feature/*')
                }
            }        
       }
    }
  }
}
